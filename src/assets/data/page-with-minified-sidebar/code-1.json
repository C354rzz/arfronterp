import { Component, OnDestroy, OnInit } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-minified-sidebar',  templateUrl: './page-with-minified-sidebar.html'})export class PageSidebarMinified implements OnDestroy, OnInit {  constructor(public appSettings: AppSettings) {  }    ngOnInit() {    this.appSettings.appSidebarMinified = true;  }  ngOnDestroy() {    this.appSettings.appSidebarMinified = false;  }}