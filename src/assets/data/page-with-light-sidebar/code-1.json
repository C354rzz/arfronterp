import { Component, OnDestroy, OnInit } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-light-sidebar',  templateUrl: './page-with-light-sidebar.html'})export class PageSidebarLight implements OnInit, OnDestroy {  constructor(public appSettings: AppSettings) {  }    ngOnInit() {    this.appSettings.appSidebarLight = true;    this.appSettings.appHeaderInverse = true;  }  ngOnDestroy() {    this.appSettings.appSidebarLight = false;    this.appSettings.appHeaderInverse = false;  }}