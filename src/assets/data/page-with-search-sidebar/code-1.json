import { Component, OnDestroy, OnInit } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-search-sidebar',  templateUrl: './page-with-search-sidebar.html'})export class PageSidebarSearch implements OnInit, OnDestroy {  constructor(public appSettings: AppSettings) {  }    ngOnInit() {    this.appSettings.appSidebarSearch = true;  }  ngOnDestroy() {    this.appSettings.appSidebarSearch = false;  }}