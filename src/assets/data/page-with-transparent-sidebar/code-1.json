import { Component, OnDestroy, OnInit } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-transparent-sidebar',  templateUrl: './page-with-transparent-sidebar.html'})export class PageSidebarTransparent implements OnInit, OnDestroy {  constructor(public appSettings: AppSettings) {  }    ngOnInit() {    this.appSettings.appSidebarTransparent = true;  }  ngOnDestroy() {    this.appSettings.appSidebarTransparent = false;  }}