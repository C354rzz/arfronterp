import { Component, OnDestroy, OnInit } from '@angular/core';import { AppSettings } from '../../../service/app-settings.service';@Component({  selector: 'page-with-top-menu',  templateUrl: './page-with-top-menu.html'})export class PageTopMenu implements OnInit, OnDestroy {  constructor(public appSettings: AppSettings) {  }    ngOnInit() {    this.appSettings.appSidebarNone = true;    this.appSettings.appTopMenu = true;  }  ngOnDestroy() {    this.appSettings.appSidebarNone = false;    this.appSettings.appTopMenu = false;  }}